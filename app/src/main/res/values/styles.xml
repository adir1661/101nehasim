<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="cardViewStyle">@style/CardView</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:windowBackground">@color/orange_background</item>
        <item name="android:buttonStyle">@style/myButtonStyle</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SeekBarWithoutSteps" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@null</item>
    </style>

    <style name="myButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/orange_background</item>
    </style>

</resources>
